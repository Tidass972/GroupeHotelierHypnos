<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="Meilleurs hôtels de luxe dans les 7 plus belles ville de France, pour votre séjour en amoureux">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <title>{% block title %}Hypnos{% endblock %}</title>

            <!-- Bootstrap core CSS -->
        <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">

        <link href="https://fonts.googleapis.com/css2?family=Shadows+Into+Light&family=Shadows+Into+Light+Two&display=swap" rel="stylesheet">

        <style>
            .bd-placeholder-img {
                font-size: 1.125rem;
                    text-anchor: middle;
                -webkit-user-select: none;
                -moz-user-select: none;
                -ms-user-select: none;
                user-select: none;
            }

            @media (min-width: 768px) {
                .bd-placeholder-img-lg {
                    font-size: 3.5rem;
                }
            }
        </style>
        <!-- Custom styles for this template -->

    </head>

    <body>
        <header>
            <nav class="navbar navbar-light navbar-expand-md sticky-top bg-white">
                <div class="container">
                    <div>
                        <img src="{{ asset('assets/images/logo_hypnos.png') }}" alt="Logo" height="130px">
                    </div>
                    <div class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#menuderoulant">
                        <span class="navbar-toggler-icon"></span>
                    </div>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Accueil</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>


            <section>
                <div>
                    <img src="{{ asset('assets/images/imageHeader.jpg') }}" alt="picine intérieur privé" class="w-100 d-block" height="720">
                </div>
            </section>
        </header>

        <main role="main">


            {% if block('imageHeadear') is defined %}
        <section class="pt-5">
            <article>
                <h1 class="text-center pt-2"> Votre chaîne hôtelière <em>Hypnos</em> </h1><br><p class="text-center pb-2">" The ultimate reférence " </p>

            </article>
            <div class="p-5">
                <h2 class="p-2 text-center">Nos Hôtels haut de gamme</h2>
                <hr class="featurette-divider">
            </div>
        </section>
            {% endif %}
    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing {% if block('imageHeadear') is not defined %}mt-5{% endif %}">

       {% block content %}
        {% endblock %}
    </div><!-- /.container -->

    <!-- FOOTER -->
    <footer class="container">
        <p class="float-right">Rosine David.</p>
        <p>Copyright &copy; 2022 Groupe Hypnos Hotel Company &middot; Tous droits réservé.</p>
    </footer>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src=" {{ asset('assets/js/bootstrap.bundle.js')}}"></script>
</body>
</html>
